                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#8bd404"
                    android:text="                     "
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#e46c11"
                    android:text="                     "
                    android:layout_marginRight="2dp"
                    />

            </TableRow>
            <TableRow>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="murder"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="rape"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
