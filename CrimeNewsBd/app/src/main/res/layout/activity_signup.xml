<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#360b0b"
    tools:context="com.example.sultanahmed.crimenewsbd.Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1ecec"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <TextView
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="REGISTRATION FORM FOR REPORTER"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <EditText
            android:background="@drawable/border"
            android:id="@+id/signUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="Name"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="#d6000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <Spinner

                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:ems="10"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp">

            </Spinner>

        </LinearLayout>

        <EditText
            android:background="@drawable/border"
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:hint="Age"
            android:drawableLeft="@drawable/ic_action_age"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="#d6000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <Spinner
                android:id="@+id/division"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:ems="10"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp"></Spinner>
            <Spinner
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:ems="10"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp"></Spinner>
        </LinearLayout>

        <EditText
            android:background="@drawable/border"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/ic_action_phone"
            android:inputType="textPhonetic"
            android:padding="15dp"
            android:textColorHint="#d6000000" />

        <EditText
            android:background="@drawable/border"
            android:id="@+id/signUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_action_email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="#d6000000" />

        <EditText
            android:background="@drawable/border"
            android:id="@+id/signUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_action_pass"
            android:inputType="textWebPassword"
            android:padding="15dp"
            android:textColorHint="#d6000000" />
        <EditText
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:id="@+id/pin"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_action_pin"
            android:padding="15dp"
            android:hint="Secret Pin"
            android:layout_height="wrap_content"
            android:textColorHint="#d6000000"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept Terms and Condition"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#c76161"
            android:singleLine="true"
            android:text="SIGN UP"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
